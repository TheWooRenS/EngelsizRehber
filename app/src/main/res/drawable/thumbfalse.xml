<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval" >

            <solid
                android:color="@color/white"/>
            <size
                android:height="1dp"
                android:width="1dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/lavender"/>

        </shape>
    </item>

    <item
        android:drawable="@drawable/sun_icon"
        android:top="1dp"
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp"
        />

</layer-list>